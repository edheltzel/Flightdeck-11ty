root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 80 

[*.{md,markdown}]
trim_trailing_whitespace = false
insert_final_newline = false

[*.{njk,nunjucks,liquid,html}]
max_line_length = 120 

[*.{js,ts,json,css,scss,yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2
