{
  "name": "flightdeck-11ty",
  "version": "0.0.3",
  "description": "A starter project for Eleventy using an opinionated and minimal frontend workflow.",
  "scripts": {
    "start": "npm-run-all -p dev:11ty dev:parcel",
    "dev:11ty": "eleventy --serve",
    "dev:parcel": "npm-run-all -p watch:sass watch:images",
    "watch:images": "parcel watch ./src/assets/images/*",
    "watch:js": "parcel watch ./src/assets/js/app.js --dist-dir ./dist/assets/js",
    "watch:sass": "parcel watch ./src/assets/scss/app.scss --dist-dir ./dist/assets/css",
    "build": "npm-run-all -s clean build:parcel build:11ty",
    "build:11ty": "cross-env ELEVENTY_ENV=production eleventy",
    "build:parcel": "npm-run-all -p build:sass build:js build:images",
    "build:images": "parcel build ./src/assets/images/* --dist-dir ./dist/assets/images",
    "build:js": "parcel build ./src/assets/js/app.js --dist-dir ./dist/assets/js",
    "build:sass": "parcel build ./src/assets/scss/app.scss --dist-dir ./dist/assets/css",
    "fresh": "npm run clean:node && npm run clean && echo \"\\033[32mðŸ§¹ All Clean âœ¨\"\"\\033[0m Run \"\"\\033[33mnpm install\"\"\\033[0m to start fresh ðŸ¤©\"",
    "clean:node": "rm -rf node_modules package-lock.json pnpm-lock.yaml",
    "clean": "rm -rf dist/ .parcel-cache/",
    "purge": "pnpm run clean:node && pnpm run clean && echo \"\\033[32mðŸ§¹ All Clean âœ¨\"\"\\033[0m Run \"\"\\033[33mpnpm install\"\"\\033[0m to start fresh ðŸ¤©\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edheltzel/Flightdeck-11ty.git"
  },
  "keywords": [],
  "author": "Ed Heltzel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/edheltzel/Flightdeck-11ty/issues"
  },
  "homepage": "https://github.com/edheltzel/Flightdeck-11ty#readme",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@parcel/config-default": "^2.6.2",
    "@parcel/optimizer-esbuild": "^2.6.2",
    "@parcel/transformer-sass": "^2.6.2",
    "browserlist": "^1.0.1",
    "cross-env": "^7.0.3",
    "eleventy-plugin-embed-everything": "^1.14.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.6.2",
    "sass": "^1.52.3"
  },
  "browserslist": "> 0.5%, last 2 versions, Firefox ESR, not dead"
}
