{
  "name": "flightdeck-11ty",
  "version": "0.0.1",
  "description": "A starter project for Eleventy using an opinionated and minimal frontend workflow.",
  "browserslist": ">= 0.5%, last 2 major versions, not dead, Chrome >= 60, Firefox >= 60, Firefox ESR, iOS >= 12, Safari >= 12, not Explorer <= 11",
  "scripts": {
    "start": "npm-run-all -p dev:11ty dev:parcel",
    "dev:11ty": "cross-env ELEVENTY_ENV=dev eleventy --serve",
    "dev:parcel": "npm-run-all -p watch:sass watch:images",
    "watch:images": "parcel watch ./src/assets/images/*",
    "watch:js": "parcel watch ./src/assets/bundle.js --dist-dir ./dist/assets/js",
    "watch:sass": "parcel watch ./src/_scss/app.scss --dist-dir ./dist/assets/css",
    "build": "npm-run-all -s clean build:parcel build:11ty",
    "build:11ty": "cross-env ELEVENTY_ENV=prod eleventy",
    "build:parcel": "npm-run-all -p build:sass build:js build:images",
    "build:images": "parcel build ./src/assets/images/* --dist-dir ./dist/assets/images",
    "build:js": "parcel build ./src/assets/js/bundle.js --dist-dir ./dist/assets/js",
    "build:sass": "parcel build ./src/_scss/app.scss --dist-dir ./dist/assets/css",
    "fresh": "npm run clean:node && npm run clean && echo \"\\033[32mðŸ§¹ All Clean âœ¨\"\"\\033[0m Run \"\"\\033[33mnpm install\"\"\\033[0m to start fresh ðŸ¤©\"",
    "clean:node": "rm -rf node_modules package-lock.json",
    "clean": "rm -rf dist/ .parcel-cache/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edheltzel/Flightdeck-11ty.git"
  },
  "keywords": [],
  "author": "Ed Heltzel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/edheltzel/Flightdeck-11ty/issues"
  },
  "homepage": "https://github.com/edheltzel/Flightdeck-11ty#readme",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-img": "^1.0.0",
    "@parcel/transformer-sass": "^2.3.1",
    "autoprefixer": "^10.4.2",
    "cross-env": "^7.0.3",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.3.1",
    "postcss": "^8.4.6",
    "sass": "^1.49.7"
  }
}
