{
  "name": "flightdeck-11ty",
  "version": "0.0.4",
  "description": "A starter project for Eleventy using an opinionated and minimal frontend workflow.",
  "scripts": {
    "start": "npm-run-all -p dev:11ty dev:parcel",
    "dev:11ty": "eleventy --serve",
    "dev:parcel": "npm-run-all -p  watch:assets",
    "watch:assets": "parcel watch './src/assets/images/*' ./src/assets/js/app.js ./src/assets/styles/app.scss --dist-dir ./dist/assets",
    "build": "npm-run-all -s clean build:parcel build:11ty",
    "build:11ty": "cross-env ELEVENTY_ENV=production eleventy",
    "build:parcel": "parcel build './src/assets/images/*' ./src/assets/js/app.js ./src/assets/styles/app.scss --dist-dir ./dist/assets",
    "clean:node": "(rm -rf node_modules package-lock.json pnpm-lock.yaml || del node_modules package-lock.json pnpm-lock.yaml)",
    "clean": "(rm -rf dist/ .parcel-cache/ || del dist/ .parcel-cache)",
    "purge": "npm run clean:node && npm run clean && echo \"\\033[32mðŸ§¹ All Clean âœ¨\"\"\\033[0m Run \"\"\\033[33mnpm install\"\"\\033[0m to start fresh ðŸ¤©\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edheltzel/Flightdeck-11ty.git"
  },
  "keywords": [],
  "author": "Ed Heltzel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/edheltzel/Flightdeck-11ty/issues"
  },
  "homepage": "https://github.com/edheltzel/Flightdeck-11ty#readme",
  "browserslist": "> 0.5%, last 2 versions, Firefox ESR, not dead",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@parcel/transformer-sass": "^2.6.2",
    "browserlist": "^1.0.1",
    "cross-env": "^7.0.3",
    "eleventy-plugin-embed-everything": "^1.14.0",
    "html-minifier": "^4.0.0",
    "imagemin-cli": "^7.0.0",
    "imagemin-webp": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.6.2",
    "sass": "^1.52.3",
    "sharp": "^0.30.7"
  }
}
