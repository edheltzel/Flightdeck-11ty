{% extends "./page.njk" %}
 {% block content %}
 {{ content | safe }}

  {% for post in collections.blog | limit(9) | reverse %}
    <article>
      <a href="{{ post.url }}">
        <picture>
          <source src="{{ post.data.featured_image }}?as=webp" type="image/webp">
          <img class="featured__image" src="{{ post.data.featured_image | default('/assets/images/testing.jpeg', true) }}?as=jpg" alt="{{ post.data.title }} post featured_image">
        </picture>
      </a>
      <h2>{{ post.data.title }}</h2>
      <p>{% if post.data.description %}
          {{ post.data.description }}
          {% else %}{{ post.templateContent | excerpt }}{% endif %}</p>
      <footer>
        <a href="{{ post.url }}" role="button" aria-label="Read More about {{ post.data.title }}">Read More‚Äç üëâ</a>
      </footer>
    </article>
   {% endfor %}
 {% endblock %}

